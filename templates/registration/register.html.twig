{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-fluid" id="register">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="row">
            <div class="col-md-3 col-mb-2"></div>
            <div class="col-md-6 order-mb-6">
                <br />
                <h3 class="mb-3 text-center text-info inscription-reader">Inscription</h3>
                <hr class="mb-4">
                <br />
                {{ form_start(registrationForm,{'attr':{'data-aos':'fade-up'}}) }}
                <div class="form-group row">
                    <div class="col-md-12 mb-3">
                        {{ form_label(registrationForm.plainPassword,'Mot de passe :')}}
                        {{ form_widget(registrationForm.plainPassword,{'attr':{'placeholder':'**********'}})}}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 mb-3">
                        {{ form_label(registrationForm.email,'Email :')}}
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            {{ form_widget(registrationForm.email)}}
                        </div>
                        <div class="form-error">
                            {{ form_errors(registrationForm.email)}}
                        </div>
                    </div>

                </div>
                <hr class="mb-4">

                <div class="form-group row">
                    <div class="col-md-8 mb-4"></div>
                    <div class="col-md-2 mb-3">

                        {{ form_widget(registrationForm.valider)}}
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
