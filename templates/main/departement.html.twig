{% extends 'base.html.twig' %}

{% block title %}covid-19 {{ departement }}
{% endblock %}

{% block body %}

    <div class="container">
        <div data-aos="fade-up">
            <div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
                    <h2 class="text-center"> <span class="badge btn-outline-danger">{{ departement}}</span></h2>
                 <p class="lead">opencovid19-fr</p>
            <p class="lead">Source : sante-publique-france-data &nbsp;
                {{ date | date('d-m-Y') }}</p>
            </div>
            <pre>
  <div class="card mb-5 shadow-lg">
      <div class="card-body">
                        {{ render_chart(nouveau) }}
      </div>
  </div>
            </pre>
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3 shadow text-center">
                        <div class="card-header">
                            <h4 class="my-0 fw-normal">Nouvelle hospitalisation</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title" style="color: #169af2;">
                                {% set base = 0 %}
                                {{ taux_nellehospi }}
                                {% if taux_nellehospi > base %}
                                    <strong><img src="{{ asset('/icons/arrow-up-right-circle.svg') }}" alt="+" width="32" height="32"></strong>
